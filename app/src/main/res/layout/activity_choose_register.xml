<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register.ChooseRegister"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/returnArrow2"
        android:layout_width="59dp"
        android:layout_height="55dp"
        android:contentDescription="@string/returnPrev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042"
        app:srcCompat="@drawable/arrow" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:text="@string/promptUser"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/chooseSenior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.892" />

    <TextView
        android:id="@+id/chooseSenior"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:background="@drawable/login_shape"
        android:fontFamily="@font/segoe"
        android:gravity="center"
        android:text="@string/choose_senior"
        android:textColor="@color/background_color"
        android:textSize="25sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/seniors"
        android:drawableLeft="@drawable/seniors"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="50dp"
        android:paddingEnd="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/chooseOrgansiation"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:background="@drawable/login_shape"
        android:drawableStart="@drawable/hierarchy"
        android:drawableLeft="@drawable/hierarchy"
        android:fontFamily="@font/segoe"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="50dp"
        android:paddingRight="50dp"
        android:text="@string/choose_org"
        android:textColor="@color/background_color"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseSenior"
        app:layout_constraintVertical_bias="0.042" />


</androidx.constraintlayout.widget.ConstraintLayout>