<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/categorypage_background"
    tools:context=".Admin.CategoryPage.UpdateCategory">

    <ImageView
        android:id="@+id/categoryUploadImageUpdate"
        android:layout_width="128dp"
        android:layout_height="93dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248"
        app:srcCompat="@drawable/updatecategorypic" />

    <ImageView
        android:id="@+id/updateicon"
        android:layout_width="157dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.373"
        app:srcCompat="@drawable/textchangeiconpicture" />


    <ImageView
        android:id="@+id/adminArrowBack3"
        android:layout_width="58dp"
        android:layout_height="34dp"
        android:contentDescription="@string/returnPrev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@drawable/arrow" />

    <EditText
        android:id="@+id/categoryDesc"
        android:layout_width="310dp"
        android:layout_height="95dp"
        android:layout_marginTop="10dp"
        android:autofillHints="false"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:hint="@string/category_create_description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.728" />

    <Button
        android:id="@+id/updatechangesbutton"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/managecategorypage_border"
        android:fontFamily="@font/poppins"
        android:text="Update Changes"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryUploadImageUpdate"
        app:layout_constraintVertical_bias="0.962" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="261dp"
        android:layout_height="94dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Update Category"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="210dp"
        android:layout_height="56dp"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:text="Description:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607" />

    <Spinner
        android:id="@+id/dropdownBox1"
        android:layout_width="304dp"
        android:layout_height="52dp"
        android:contentDescription="@string/dropDownBox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.462" />


</androidx.constraintlayout.widget.ConstraintLayout>